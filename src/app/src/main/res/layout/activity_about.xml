<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/icon_rec_width_size"
            android:layout_height="@dimen/icon_rec_width_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/TextView_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="@string/app_name"
            android:textColor="@color/color_ep_font_gray" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_xxsmall_margin"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:layout_marginTop="@dimen/layout_xxsmall_margin"
            android:background="@color/color_ep_white"
            android:elevation="100dp"
            card_view:cardCornerRadius="@dimen/common_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/layout_about"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="关于我们" />
                </RelativeLayout>

                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    android:id="@+id/layout_agreement"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="用户协议" />
                </RelativeLayout>

                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    style="@style/ClickableLayoutItemSetting"
                    android:id="@+id/layoutGuid">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="欢迎页" />
                </RelativeLayout>
                <!-- 只是一个有边距的分割线 -->

                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    android:id="@+id/layout_evaluate"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="去评分" />
                </RelativeLayout>
                <!-- 只是一个有边距的分割线 -->

                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    android:id="@+id/layout_clean_cache"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="清除缓存" />
                </RelativeLayout>
                <!-- 只是一个有边距的分割线 -->

                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    android:id="@+id/layout_update"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="检查更新" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/str_copyright_emptypointer"
            android:textColor="@color/color_ep_font_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/str_copyright"
            android:textColor="@color/color_ep_font_gray"
            android:textSize="@dimen/font_small_size" />

    </LinearLayout>

</ScrollView>