<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/layout_xxsmall_margin"
    android:layout_marginLeft="@dimen/layout_small_margin"
    android:layout_marginRight="@dimen/layout_small_margin"
    android:layout_marginTop="@dimen/layout_xxsmall_margin"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    app:cardCornerRadius="@dimen/common_radius"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ep_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:layout_toLeftOf="@+id/textView_score"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_xsmall_margin"
                android:text="TextView"
                android:textSize="@dimen/font_medium_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_coursename"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textView_renew_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_small_margin"
                        android:text="TextView" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_index_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_borrow_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_return_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>
        </LinearLayout>

        <com.rey.material.widget.Button
            android:id="@+id/button_renew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:paddingLeft="@dimen/layout_small_margin"
            app:v_styleId="@array/button_flat_color"
            android:paddingRight="@dimen/layout_small_margin"
            android:text="续借"
            android:background="@null"
            android:textSize="@dimen/font_medium_size" />
    </RelativeLayout>

</android.support.v7.widget.CardView>