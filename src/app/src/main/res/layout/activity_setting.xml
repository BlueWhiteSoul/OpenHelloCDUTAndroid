<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/layout_end_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.emptypointer.hellocdut.ui.basic.SettingActivity">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:visibility="gone"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_xxsmall_margin"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:layout_marginTop="@dimen/layout_xxsmall_margin"
            android:background="@color/color_ep_white"
            android:elevation="100dp"
            card_view:cardCornerRadius="@dimen/common_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/layout_medium_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/layout_medium_margin"
                    android:text="消息及提醒" />

                <RelativeLayout
                    android:id="@+id/layoutShowNotification"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="通知栏提醒" />

                    <com.rey.material.widget.Switch

                        android:id="@+id/switchShowNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:checked="false"
                        app:v_styleId="@array/switches" />
                </RelativeLayout>

                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    android:id="@+id/layoutRing"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="声音" />

                    <com.rey.material.widget.Switch
                        android:id="@+id/switchRing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:checked="false"
                        app:v_styleId="@array/switches" />
                </RelativeLayout>


                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    android:id="@+id/layoutBeep"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="震动" />

                    <com.rey.material.widget.Switch
                        android:id="@+id/switchBeep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:checked="false"
                        app:v_styleId="@array/switches" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_xxsmall_margin"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:layout_marginTop="@dimen/layout_xxsmall_margin"
            android:background="@color/color_ep_white"
            android:elevation="100dp"
            card_view:cardCornerRadius="@dimen/common_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/layout_medium_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/layout_medium_margin"
                    android:text="聊天" />

                <RelativeLayout
                    android:id="@+id/layoutOutplay"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="使用扬声器播放语音" />

                    <com.rey.material.widget.Switch
                        android:id="@+id/switchOutPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:checked="false"
                        app:v_styleId="@array/switches" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_xxsmall_margin"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:layout_marginTop="@dimen/layout_xxsmall_margin"
            android:background="@color/color_ep_white"
            android:elevation="100dp"
            card_view:cardCornerRadius="@dimen/common_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/layout_medium_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/layout_medium_margin"
                    android:text="帐号" />

                <RelativeLayout
                    android:id="@+id/layoutChangePassword"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="修改密码" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layoutIgnoreManage"
                    style="@style/ClickableLayoutItemSetting"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="管理黑名单" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/layout_xxsmall_margin"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:layout_marginTop="@dimen/layout_xxsmall_margin"
            android:background="@color/color_ep_white"
            android:elevation="100dp"
            card_view:cardCornerRadius="@dimen/common_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/layout_medium_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/layout_medium_margin"
                    android:text="EmptyPointer" />

                <RelativeLayout
                    android:id="@+id/layoutFeedBack"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="意见反馈" />
                </RelativeLayout>

                <include layout="@layout/view_underline_with_margin" />

                <RelativeLayout
                    android:id="@+id/layoutAbout"
                    style="@style/ClickableLayoutItemSetting">

                    <TextView
                        style="@style/TextViewSetting"
                        android:text="关于" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>